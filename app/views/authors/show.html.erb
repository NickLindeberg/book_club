<div class="link-wrapper" id="all-books-link-wrapper">
    <%= link_to "All Books", books_path %>
</div>

<h1>AUTHOR</h1>

<div id="author-name">
  <%= @author.name %>
</div>

<i class="fa fa-trash"></i>
<%= link_to "Delete", author_path(@author), method: "delete", id: "delete-author-link" %> <br>

<span id="other-books">other books by author:</span>


  <% @author.books.each do |book| %>
  <div class="book-info">
  
    <%= link_to "#{book.title}", book_path(book) %>

    <% book.authors.each do |author| %>
      <div>
        <% if @author.name != author.name %>
        
        Co-authored by:
        <span class="co-authors">
          <%= link_to author.name, author_path(author), id: 'name-link' %>
        </span>
        <% end %>
      </div>
    <% end %>

    <span>
      <%= book.pages %> pages |
      published in <%= book.year %>
    </span>

  </div>


  <% end %>
</div>
