<!--SORTING LINKS -->

<h1>All The Books</h1>

<span id="actions">
  <div class="link-wrapper" id="create-book-link-wrapper">
    <%= link_to "Create Book", new_book_path, id: 'create-book-link' %>
  </div>

  

</span>
<!-- CREATE BOOK LINK -->

<ul class="all-books-list">
  <% @books.each do |b| %>
    <li>
      <div id="book-entry">
        <div id="title"><%= link_to b.title, book_path(b), id: 'title-link' %></div>

        <% b.authors.each do |a| %>
        <span id="authors-list-<%= b.id %>">
          <%= link_to a.name, author_path(a), id: 'author-link' %> </br>
        </span>
        <% end %>
      
        <div class="info-box">
          <span class="total-reviews">Total Reviews: <%= b.reviews.total_reviews %></span>
          <br>
          <span id="avg-score">Average Rating: <%= b.reviews.avg_score %></span>
          <br>
          <span id="num-pages">Number of Pages: <%= b.pages %> pages</span>
          <br>
          <span id="year-written">Published: <%= b.year %></span>
        
        </div>
      </div>
    </li>
  <% end %>
</ul>
