<div class="topnav">
  <a href="#">Highest Rating</a>
  <a href="#">Lowest Rating</a>
  <a href="#">Longest</a>
  <a href="#">Shortest</a>
  <a href="#">Most Reviews</a>
  <a href="#">Fewest Reviews</a>
</div>
<!--SORTING LINKS -->

<h1>All The Books</h1>

<div id="highest-rated">
  <% @three_highest.each do |th| %>
    <%= th.title %>
  <% end %>
</div>

<div id="lowest-rated">
  <% @three_lowest.each do |tl| %>
    <%= tl.title %>
  <% end %>
</div>

<div id="top-users">
  <% @three_top_users.each do |tu| %>
  <%= tu.name %>
  <% end %>
</div>


<span id="actions">
  <div class="link-wrapper" id="create-book-link-wrapper">
    <%= link_to "Create Book", new_book_path, id: 'create-book-link' %>
  </div>

</span>
<!-- CREATE BOOK LINK -->

<ul class="all-books-list">
  <% @books.each do |b| %>
    <li>
      <div id="book-entry">
        <div id="title"><%= link_to b.title, book_path(b), id: 'title-link' %></div>

        <% b.authors.each do |a| %>
        <span id="authors-list-<%= b.id %>">
          <%= link_to a.name, author_path(a), id: 'author-link' %> </br>
        </span>
        <% end %>

        <div class="info-box">
          <span id="total-reviews-<%= b.id %>">Total Reviews: <%= b.reviews.total_reviews %></span>
          <br>
          <span id="avg-score-<%= b.id %>">Average Rating: <%= b.reviews.avg_score %></span>
          <br>
          <span id="num-pages-<%= b.id %>">Number of Pages: <%= b.pages %> pages</span>
          <br>
          <span id="year-written-<%= b.id %>">Published: <%= b.year %></span>

        </div>
      </div>
    </li>
  <% end %>
</ul>
