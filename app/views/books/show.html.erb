<%= link_to "All Books", books_path %>
<%= link_to "Delete", book_path(@book), method: "delete" %> 

<%= @book.title %>
<%= @book.pages %>
<%= @book.year %>

<% @book.authors.each do |a| %>
  <%= a.name %>
<% end %>

<% @book.reviews.each do |r| %>
<%= link_to r.user.name, user_path(r)%>
<%= r.title %>
<%= r.description %>
<%= r.score %>
<% end %>
