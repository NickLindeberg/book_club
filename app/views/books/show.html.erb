<div id=all-books-div>
    <%= link_to "All Books", books_path, id: "all-books-link"%>
</div>


<div class="container">

  <div class="book-entry">

    <div id="book-title"><%= @book.title %></div>

    <div id="book-authors">Author:
    <% @book.authors.each do |a| %>
      <%= link_to a.name, author_path(a) %>&nbsp;&nbsp;
    <% end %>
    </div>

    <div id="book-pages">
      <%= "Pages: #{@book.pages}" %>
    </div>
    <div id="book-year">
      <%= "Published: #{@book.year}" %>
    </div>
  </div>

  </div>
<i class="fa fa-trash"></i>
  <%= link_to "Delete", book_path(@book), method: "delete", id: "delete-book-link" %>
</div>

<div id="book-reviews">Reviews:
  <% @book.reviews.each do |r| %>
  <%= link_to r.user.name, user_reviews_path(r.user_id)%>
  <%= r.title %>
  <%= r.description %>
  <%= r.score %>
  <% end %>
</div>

<div id="add-review-link">
<a href="#">Write a Review</a>
</div>
