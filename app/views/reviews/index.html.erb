<div class="link-wrapper" id="write-review-link-wrapper">
  <%= link_to "All Books", books_path %>
</div>

<h1>REVIES for USER</h1>

<div class="link-wrapper" id="newest-link-wrapper">
    <%= link_to "Newest", books_path %>
</div>

<div class="link-wrapper" id="oldest-link-wrapper">
    <%= link_to "Oldest", books_path %>
</div>

<% @reviews.each do |r| %>
<div class="review-entry">
  
  <%= r.score  %>/5  |  
  <em><%= r.title  %></em>
  <div class= "description-entry">
  <%= r.description  %>
  </div>
  <span id="delete-review-link"><%= link_to "Delete", user_review_path(r.user_id, r), method: 'delete'%></span>

</div>
<% end %>